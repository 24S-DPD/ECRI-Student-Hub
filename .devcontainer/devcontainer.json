{
    "name": "ECRI Student Hub",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
    ],
    "remoteUser": "root",
    "mounts": [
        "source=ecri-student-hub_project-database,target=/var/lib/postgresql/data,type=volume"
    ],
    "forwardPorts": [],
    "remoteEnv": {
        "DATABASE_URL": "${{ secrets.DATABASE_URL }}"
    },
    "shutdownAction": "stopCompose",
    "initializeCommand": "/bin/sh -c 'service docker start && while ! docker info >/dev/null 2>&1; do sleep 1; done'",
    "postCreateCommand": "docker-compose up --build"
}
